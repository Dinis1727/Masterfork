generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Training {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String
  formacao  String
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
  @@map("trainings")
}

model Order {
  id        Int      @id @default(autoincrement())
  name      String
  business  String
  email     String
  services  String
  message   String?
  cartSummary String?
  items     Json?
  total     Decimal? @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
  @@map("orders")
}
